generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  discordId       String?  @unique
  discordUsername String?
  rainUsername    String
  verified        Boolean  @default(false)

  activeRakebacks ActiveRakeback[]
}

model UserVerification {
  id              Int     @id @default(autoincrement())
  discordId       String? @unique
  discordUsername String?
  rainUsername    String
  verified        Boolean @default(false)
}

model RankRewardClaim {
  id           Int      @id @default(autoincrement())
  rainId       String   // Use Rain ID for tracking claims
  rainUsername String   // Use Rain Username for tracking claims
  rewardAmount Float
  claimedAt    DateTime @default(now())
}

model ActiveRakeback {
  id                     Int      @id @default(autoincrement())
  userId                 Int      // Reference to the user
  totalWageredAtLastRedemption Float
  lastRedeemedDate       DateTime @default(now())
  activeRakeback         Float    @default(0)
  redeemableRakeback     Float    @default(0)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}
